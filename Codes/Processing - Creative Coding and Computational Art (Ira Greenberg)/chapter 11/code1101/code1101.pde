// Animation in Java using a Thread// This code should run ok in Processingvoid setup(){  size(400, 400);  new SimpleAnimation();}class SimpleAnimation implements Runnable{  int x, xspd = 3;  //constructor  SimpleAnimation(){    Thread t = new Thread(this);    t.start();  }  void run() {    while (x<width-10) {      background(255);      rect(x, height/2, 10, 10);      x+=xspd;      repaint();      try {        Thread.sleep(30);      }       catch (InterruptedException e){       }    }  }}